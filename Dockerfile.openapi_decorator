# âš™ï¸ Base image: Secure Node.js LTS on Alpine
FROM node:18.15-alpine

# ğŸ”’ Install essential tools for build/runtime
RUN apk add --no-cache \
  git \
  python3 \
  make \
  g++ \
  && npm install -g npm@latest

# ğŸ§­ Define working directory
WORKDIR /openapi-check

# ğŸ§¼ Ensure proper ownership
RUN chown node:node /openapi-check -R

# ğŸ‘¤ Switch to non-root user
USER node

# ğŸ“¦ Copy and assign permissions for app dependencies
COPY --chown=node:node package*.json ./

# ğŸ“¦ Install dependencies
RUN npm ci --omit=dev

# ğŸ“ Add source, content, and data directories
ADD --chown=node:node src ./src
ADD --chown=node:node content ./content
ADD --chown=node:node data ./data

# ğŸš€ Set startup command
ENTRYPOINT ["node", "src/rest/scripts/openapi-check.js"]